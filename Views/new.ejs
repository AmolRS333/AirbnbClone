<% layout("/layouts/boilerplate") -%>

<div class="row mt-4">
  <div class="col-8 offset-2">
    <h1 class="">Create A Listing</h1>
    <form
      method="post"
      class="needs-validation"
      action="/listings"
      novalidate
      enctype="multipart/form-data"
      
    >
      <div class="mb-3">
        <label for="title" class="form-label fw-bold">Title</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Enter Title"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter Title !!!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label fw-bold">Description</label>
        <textarea
          type="text"
          name="listing[description]"
          placeholder="Describe how Owsome it is !!!"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please Enter Description !!!</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label fw-bold">Upload Image</label>
        <input type="file" name="listing[image]" class="form-control" />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label fw-bold">Price</label>
          <input
            name="listing[price]"
            placeholder="Enter price"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please Enter Price !!!</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label fw-bold">Country</label>
          <input
            type="text"
            name="listing[country]"
            placeholder="e.g. India"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please Enter Country Name !!!</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label fw-bold">Location</label>
        <input
          type="text"
          name="listing[location]"
          placeholder="Nashik, Maharashtra"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Enter Location !!!</div>
      </div>

      <div class="col-4 mb-3 d-grid gap-2 col-4 mx-auto">
        <button class="btn btn-dark add-btn fw-bold">Add New</button>
      </div>
    </form>
  </div>
</div>
